.wrapper_with_padding
	#note_show
		%h1.title= @note.title
		%p= simple_format(@note.content)

		=link_to "All Notes", notes_path, class: "button"
		=link_to "Edit", edit_note_path(@note), class: "button"
		=link_to "Delete", notes_path(@note), method: :destory, data: { confirm: "Are you sure?" }, class: "button"
